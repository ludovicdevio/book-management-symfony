{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle"></i> Informations personnelles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-placeholder bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px; font-size: 48px;">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <h4 class="mt-3">{{ user.fullName }}</h4>
                        <p class="text-muted">{{ user.email }}</p>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <strong><i class="bi bi-person"></i> Prénom :</strong>
                        <p class="mb-0">{{ user.firstName }}</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-person"></i> Nom :</strong>
                        <p class="mb-0">{{ user.lastName }}</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-envelope"></i> Email :</strong>
                        <p class="mb-0">{{ user.email }}</p>
                    </div>

                    {% if user.phone %}
                    <div class="mb-3">
                        <strong><i class="bi bi-telephone"></i> Téléphone :</strong>
                        <p class="mb-0">{{ user.phone }}</p>
                    </div>
                    {% endif %}

                    <div class="mb-3">
                        <strong><i class="bi bi-calendar"></i> Membre depuis :</strong>
                        <p class="mb-0">{{ user.createdAt|date('d/m/Y') }}</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-shield-check"></i> Statut :</strong>
                        <p class="mb-0">
                            {% if user.isActive %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-danger">Inactif</span>
                            {% endif %}
                        </p>
                    </div>

                    {% if user.isAdmin %}
                    <div class="mb-3">
                        <strong><i class="bi bi-star-fill"></i> Rôle :</strong>
                        <p class="mb-0">
                            <span class="badge bg-warning text-dark">Administrateur</span>
                        </p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up"></i> Statistiques d'emprunt
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3 class="text-primary">{{ user.activeLoans|length }}</h3>
                                    <p class="mb-0">Emprunts actifs</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3 class="text-success">{{ user.maxLoans - user.activeLoans|length }}</h3>
                                    <p class="mb-0">Emprunts disponibles</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h3 class="text-info">{{ user.loans|length }}</h3>
                                    <p class="mb-0">Total emprunts</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="progress mb-3" style="height: 25px;">
                        {% set percentage = (user.activeLoans|length / user.maxLoans) * 100 %}
                        <div class="progress-bar {% if percentage >= 80 %}bg-danger{% elseif percentage >= 50 %}bg-warning{% else %}bg-success{% endif %}"
                             role="progressbar"
                             style="width: {{ percentage }}%">
                            {{ user.activeLoans|length }} / {{ user.maxLoans }}
                        </div>
                    </div>

                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i>
                        Vous pouvez emprunter jusqu'à {{ user.maxLoans }} livres simultanément.
                    </p>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-journal-bookmark"></i> Mes emprunts actifs
                    </h5>
                </div>
                <div class="card-body">
                    {% if user.activeLoans is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Vous n'avez aucun emprunt en cours.
                        </div>
                        <a href="{{ path('app_book_index') }}" class="btn btn-primary">
                            <i class="bi bi-search"></i> Parcourir le catalogue
                        </a>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Livre</th>
                                        <th>Date d'emprunt</th>
                                        <th>Date de retour</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for loan in user.activeLoans %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('app_book_show', {id: loan.book.id}) }}">
                                                    {{ loan.book.title }}
                                                </a>
                                            </td>
                                            <td>{{ loan.borrowedAt|date('d/m/Y') }}</td>
                                            <td>{{ loan.dueDate|date('d/m/Y') }}</td>
                                            <td>
                                                {% if loan.isOverdue %}
                                                    <span class="badge bg-danger">En retard</span>
                                                {% else %}
                                                    <span class="badge bg-success">En cours</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_loan_my_loans') }}" class="btn btn-sm btn-primary">
                                                    Voir détails
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
