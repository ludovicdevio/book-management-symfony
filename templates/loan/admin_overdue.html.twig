{% extends 'base.html.twig' %}

{% block title %}Emprunts en retard{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> Emprunts en retard
        </h1>
        <div>
            <a href="{{ path('app_loan_admin_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Tous les emprunts
            </a>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-primary">
                <i class="bi bi-house"></i> Dashboard
            </a>
        </div>
    </div>

    {% if overdue_loans is empty %}
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> Excellent ! Aucun emprunt en retard.
        </div>
    {% else %}
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> <strong>{{ overdue_loans|length }}</strong> emprunt(s) en retard nécessite(nt) votre attention.
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-danger">
                            <tr>
                                <th>ID</th>
                                <th>Utilisateur</th>
                                <th>Livre</th>
                                <th>Date de retour prévue</th>
                                <th>Jours de retard</th>
                                <th>Contact</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for loan in overdue_loans %}
                                <tr>
                                    <td>{{ loan.id }}</td>
                                    <td>
                                        <strong>{{ loan.user.firstName }} {{ loan.user.lastName }}</strong>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_book_show', {'id': loan.book.id}) }}">
                                            {{ loan.book.title }}
                                        </a>
                                        <br>
                                        <small class="text-muted">par {{ loan.book.author.fullName }}</small>
                                    </td>
                                    <td>
                                        <span class="text-danger fw-bold">
                                            {{ loan.dueDate|date('d/m/Y') }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">
                                            {{ loan.overdueDays }} jour(s)
                                        </span>
                                    </td>
                                    <td>
                                        <a href="mailto:{{ loan.user.email }}">
                                            <i class="bi bi-envelope"></i> {{ loan.user.email }}
                                        </a>
                                        {% if loan.user.phone %}
                                            <br>
                                            <small class="text-muted">
                                                <i class="bi bi-telephone"></i> {{ loan.user.phone }}
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <form method="post" action="{{ path('app_loan_return', {'id': loan.id}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('return' ~ loan.id) }}">
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Marquer ce livre comme retourné?')">
                                                <i class="bi bi-check"></i> Retourner
                                            </button>
                                        </form>
                                        <a href="mailto:{{ loan.user.email }}?subject=Rappel%20emprunt%20en%20retard"
                                           class="btn btn-sm btn-warning">
                                            <i class="bi bi-envelope"></i> Rappel
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
