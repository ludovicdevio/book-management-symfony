{% extends 'base.html.twig' %}

{% block title %}Catalogue des livres{% endblock %}

{% block body %}
<div class="container mt-4">
    {# En-tête avec statistiques #}
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="mb-3">
                <i class="bi bi-book-fill"></i> Catalogue des livres
            </h1>

            {# Statistiques #}
            {% if statistics is defined %}
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5 class="card-title">Total de livres</h5>
                            <p class="card-text display-6">{{ statistics.total ?? 0 }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h5 class="card-title">Disponibles</h5>
                            <p class="card-text display-6">{{ statistics.available ?? 0 }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h5 class="card-title">Empruntés</h5>
                            <p class="card-text display-6">{{ statistics.borrowed ?? 0 }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h5 class="card-title">Catégories</h5>
                            <p class="card-text display-6">{{ statistics.categories ?? 0 }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    {# Formulaire de recherche #}
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-search"></i> Rechercher un livre</h5>
        </div>
        <div class="card-body">
            {{ form_start(search_form, {'method': 'GET', 'attr': {'class': 'row g-3'}}) }}
                <div class="col-md-4">
                    {{ form_row(search_form.query) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(search_form.category) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(search_form.author) }}
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="form-check mb-3">
                        {{ form_widget(search_form.availableOnly) }}
                        {{ form_label(search_form.availableOnly) }}
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                    <a href="{{ path('app_book_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Réinitialiser
                    </a>
                    {% if is_granted('ROLE_LIBRARIAN') %}
                        <a href="{{ path('app_book_new') }}" class="btn btn-success float-end">
                            <i class="bi bi-plus-circle"></i> Nouveau livre
                        </a>
                    {% endif %}
                </div>
            {{ form_end(search_form) }}
        </div>
    </div>

    {# Liste des livres #}
    {% if books is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun livre trouvé correspondant à vos critères de recherche.
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            {% for book in books %}
                <div class="col">
                    {% include 'book/_card.html.twig' with {'book': book} %}
                </div>
            {% endfor %}
        </div>

        <div class="mt-4">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i>
                {{ books|length }} livre(s) trouvé(s)
            </p>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Script pour améliorer l'UX du formulaire de recherche
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.querySelector('form[name="book_search"]');
            if (searchForm) {
                // Auto-submit sur changement des selects
                const selects = searchForm.querySelectorAll('select');
                selects.forEach(select => {
                    select.addEventListener('change', function() {
                        searchForm.submit();
                    });
                });
            }
        });
    </script>
{% endblock %}
