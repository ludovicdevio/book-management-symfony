{% extends 'base.html.twig' %}

{% block title %}Modifier: {{ book.title }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Modifier le livre
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.title, {
                                'label': 'Titre du livre',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.isbn, {
                                'label': 'ISBN',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.publishedYear, {
                                'label': 'Année de publication',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.author, {
                                'label': 'Auteur',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.category, {
                                'label': 'Catégorie',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.totalCopies, {
                                'label': 'Nombre total de copies',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.availableCopies, {
                                'label': 'Copies disponibles',
                                'attr': {'class': 'form-control', 'readonly': true},
                                'help': 'Mis à jour automatiquement'
                            }) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.coverImage, {
                            'label': 'URL de la couverture',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description, {
                            'label': 'Description',
                            'attr': {'class': 'form-control', 'rows': 5}
                        }) }}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Mettre à jour
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
