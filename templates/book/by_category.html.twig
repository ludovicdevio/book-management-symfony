{% extends 'base.html.twig' %}

{% block title %}Livres - {{ category.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>
                <i class="bi bi-folder-fill text-primary"></i> {{ category.name }}
            </h1>
            <p class="text-muted">{{ category.description }}</p>
        </div>
        <a href="{{ path('app_book_index') }}" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Retour au catalogue
        </a>
    </div>

    {% if books is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun livre dans cette cat√©gorie pour le moment.
        </div>
    {% else %}
        <div class="row">
            {% for book in books %}
                <div class="col-md-4 mb-4">
                    {% include 'book/_card.html.twig' with {'book': book} %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
